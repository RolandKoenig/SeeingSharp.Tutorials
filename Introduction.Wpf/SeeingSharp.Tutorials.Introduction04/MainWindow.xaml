<Window x:Class="SeeingSharp.Tutorials.Introduction04.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:seeingsharp="clr-namespace:SeeingSharp.Multimedia.Views;assembly=SeeingSharp.Multimedia"
        xmlns:local="clr-namespace:SeeingSharp.Tutorials.Introduction04"
        mc:Ignorable="d"
        Icon="Assets/Logo.ico"
        Title="Seeing# Tutorials - Introduction 4 (Wpf)" Height="350" Width="525">
    <Grid>
        <seeingsharp:SeeingSharpRendererElement Name="CtrlRenderPanel" />

        <Border Margin="50" VerticalAlignment="Top"
                Background="#BB999999" BorderThickness="1" BorderBrush="DarkGray">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock FontSize="30" Text="Picked objects: " />
                <TextBlock FontSize="30" Name="TxtPickedObject" Text="[Picked Object]" />
            </StackPanel>
        </Border>
    </Grid>
